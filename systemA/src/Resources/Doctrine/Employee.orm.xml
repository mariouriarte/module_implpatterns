<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Entity\Employee" repository-class="App\Repository\EmployeeRepository">
        <id name="id" type="string" length="36" column-definition="VARCHAR(36) NOT NULL"/>

        <field name="nombres" length="150"/>
        <field name="apellido_1" length="150"/>
        <field name="apellido_2" length="150" nullable="true"/>
        <field name="apellido_3" length="150" nullable="true"/>
        <field name="nickname" length="150" unique="true"/>

    </entity>
</doctrine-mapping>
